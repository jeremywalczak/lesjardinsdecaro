<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <ImageView
            android:id="@+id/accountImageView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hamburger_icon"
            android:layout_marginTop="@dimen/spacing_m"
            android:layout_marginStart="@dimen/spacing_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/titleImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="@dimen/spacing_m"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"/>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/titleImageView"
            android:id="@+id/carrousselHomePageViewPager"
            tools:background="@drawable/example_fruit"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clipChildren="false"
            android:overScrollMode="never"
            android:animateLayoutChanges="true"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/legumesImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/carrousselHomePageViewPager"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/epicerieImageView"
            android:src="@drawable/button_legume"
            app:layout_constraintBottom_toTopOf="@+id/caveImageView"
            android:padding="10dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/epicerieImageView"
            app:layout_constraintTop_toBottomOf="@+id/carrousselHomePageViewPager" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/legumesImageView" app:layout_constraintHorizontal_bias="0.5"
            android:src="@drawable/button_epicerie"
            app:layout_constraintBottom_toTopOf="@+id/fruitsImageView"
            android:padding="10dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/caveImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/fruitsImageView" android:src="@drawable/button_cave"
            app:layout_constraintBottom_toTopOf="@+id/panierImageView"
            app:layout_constraintTop_toBottomOf="@+id/legumesImageView"
            android:padding="10dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fruitsImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/caveImageView"
            app:layout_constraintHorizontal_bias="0.5" android:src="@drawable/button_fruit"
            app:layout_constraintBottom_toTopOf="@+id/panierImageView"
            app:layout_constraintTop_toBottomOf="@+id/epicerieImageView"
            android:scaleType="fitCenter" android:padding="10dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:src="@drawable/grass_footer"
            android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/panierImageView"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/button_buy"
            app:layout_constraintHeight_percent="0.14"
            android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

