<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/titleImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/titleImageView"
            android:id="@+id/detailProduitViewPager"
            android:background="@drawable/example_fruit"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/editText2"
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:ems="10"
            android:inputType="textMultiLine|textPersonName"
            android:singleLine="true"
            android:text="Ceci est la magnifique description d'une pomme granit"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="416dp" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:src="@drawable/grass_footer"
            android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="63dp"
            android:id="@+id/imageView8"
            android:src="@drawable/button_buy"
            app:layout_constraintHeight_percent="0.14" tools:layout_editor_absoluteY="606dp"
            tools:layout_editor_absoluteX="161dp"/>

    <EditText
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="556dp" tools:layout_editor_absoluteX="150dp" android:id="@+id/product_number"
            android:text="2" android:textAlignment="center"/>

    <ImageView
            android:clickable="true"
            android:id="@+id/minus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"
            app:layout_constraintHeight_percent="0.14"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="556dp" />

    <ImageView
            android:clickable="true"
            android:id="@+id/plus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"
            app:layout_constraintHeight_percent="0.14"
            tools:layout_editor_absoluteX="265dp"
            tools:layout_editor_absoluteY="556dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

