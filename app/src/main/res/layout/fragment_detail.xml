<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/titleImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/titleImageView"
            android:id="@+id/detailProduitViewPager"
            android:background="@drawable/example_fruit"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine|textPersonName"
            android:text="Ceci est la magnifique description d'une pomme granit"
            android:ems="10"
            tools:layout_editor_absoluteY="436dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/editText2"
            android:singleLine="true"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:src="@drawable/grass_footer"
            android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="63dp"
            android:id="@+id/imageView7"
            android:src="@drawable/button_buy"
            app:layout_constraintHeight_percent="0.14" tools:layout_editor_absoluteY="606dp"
            tools:layout_editor_absoluteX="161dp"/>

    <EditText
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="553dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/editText3"
            android:text="2" android:textAlignment="center"/>
    <ImageButton
            android:text="-"
            android:layout_width="38dp"
            android:src="@drawable/button_buy"
            android:layout_height="33dp" tools:layout_editor_absoluteY="553dp"
            tools:layout_editor_absoluteX="46dp" android:id="@+id/button" style="@style/Widget.AppCompat.Button"/>
    <Button
            android:text="+"
            android:layout_width="38dp"
            android:layout_height="33dp" tools:layout_editor_absoluteY="553dp"
            tools:layout_editor_absoluteX="229dp" android:id="@+id/button2" style="@style/Widget.AppCompat.Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>

