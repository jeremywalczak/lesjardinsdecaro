<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_s"
        android:paddingTop="@dimen/spacing_xs"
        android:paddingEnd="@dimen/spacing_s"
        android:paddingBottom="12dp">

    <FrameLayout
            app:layout_constraintDimensionRatio="H, 343:132"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/list_item_banner_reduce"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/primary_02_400"
                android:textColor="@color/basic_200"
                android:layout_marginStart="@dimen/spacing_xl"
                android:text="100%"/>


        <ImageView
                android:id="@+id/list_item_banner_picture"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/spacing_s"
                android:elevation="@dimen/elevation"
                android:orientation="vertical" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>